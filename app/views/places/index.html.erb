<p>Below is Waterloo (Ontario, Canada) on Google Maps.</p>

<div style='width: 800px;'>
  <div id="map123" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map123'}}, function(){
	  markers = handler.addMarkers([
		{
		  "lat": 43.4642578,
		  "lng": -80.5204096,
		  "picture": {

			"width":  32,
			"height": 32
		  },
		  "infowindow": "hello!"
		}
	  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(8);
});
</script>
