<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
		<%= form_tag searches_path, method: 'get' do %>

			<%= hidden_field_tag :search %>
		  	  
			<div class="col-md-4">
			    <%= label_tag :within, "within" %>
				<%= search_field_tag(:q1, params[:q1], class:"search-field-css" ) %>	
				<%= label_tag :km, "km" %>
			</div>

			<div class="col-md-3">
			    <%= label_tag :of, "of" %>
				<%= search_field_tag(:q2, params[:q2], class:"search-field-css", placeholder:"address or coordinates") %>
			</div>
		   
			<div class="col-md-2">
				<%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
			</div>
			
		 <% end %>
	</div>
</div>
